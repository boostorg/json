local SOURCES =
    _detail_stack.cpp
    allocator.cpp
    array.cpp
    assign_string.cpp
    assign_vector.cpp
    basic_parser.cpp
    error.cpp
    iterator.cpp
    json.cpp
    kind.cpp
    number.cpp
    object.cpp
    parse_file.cpp
    parser.cpp
    serializer.cpp
    storage.cpp
    string.cpp
    value.cpp
    ;

local RUN_TESTS ;

for local f in $(SOURCES)
{
    RUN_TESTS += [ run $(f) lib.cpp main.cpp ] ;
}

alias run-tests : $(RUN_TESTS) ;

exe fat-tests :
    $(SOURCES)
    lib.cpp
    main.cpp
    ;

explicit fat-tests ;

run $(SOURCES)
    lib.cpp
    : : : : run-fat-tests ;

explicit run-fat-tests ;
